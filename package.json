{
  "name": "wp-dev-env",
  "version": "1.0.0",
  "type": "module",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "@splidejs/splide": "^4.1.4",
    "@wordpress/env": "5.14.0",
    "autoprefixer": "^10.4.19",
    "chokidar": "^3.6.0",
    "imagemin": "^9.0.0",
    "imagemin-webp": "^8.0.0",
    "kiso.css": "^1.1.4",
    "postcss": "^8.4.45",
    "resolve": "^1.22.8",
    "sharp": "^0.33.4",
    "vite-plugin-handlebars": "^2.0.0",
    "vite-plugin-image-optimizer": "^1.1.8"
  },
  "scripts": {
    "dev": "vite --host",
    "build": "rm -rf dist && vite build",
    "build:wp": "vite build --mode wp",
    "build:wp:dev": "vite build --mode wp-dev",
    "build:wp:prod": "vite build --mode wp-prod",
    "preview": "vite preview",
    "wp-start": "wp-env start",
    "wp-stop": "wp-env stop",
    "wp-reset": "wp-env destroy && wp-env start",
    "format": "yarn run _typecheck && yarn run _lint-fix && yarn run _prettier-fix",
    "_typecheck": "yarn run tsc --noEmit ",
    "_lint": "eslint --ext .js --ignore-path .gitignore . && stylelint \"**/*.{scss,css}\"",
    "_prettier": "prettier --check \"**/*.{html,scss,js,json,md}\" --ignore-path .prettierignore",
    "_lint-fix": "eslint --fix --ext .js --ignore-path .gitignore . && stylelint --fix \"**/*.{scss,css}\"",
    "_prettier-fix": "prettier --write \"**/*.{html,scss,js,json,md}\" --ignore-path .prettierignore",
    "lint": "yarn run _lint",
    "lint:fix": "yarn run _lint-fix",
    "prettier:check": "yarn run _prettier",
    "prettier:fix": "yarn run _prettier-fix",
    "quality-check": "yarn run lint && yarn run prettier:check",
    "prepare": "husky install",
    "wp-contents export": "wp-env run cli wp db export /var/www/html/wp-content/uploads/backup.sql",
    "wp-contents import": "wp-env run cli wp db reset --yes && wp-env run cli wp db import /var/www/html/wp-content/uploads/backup.sql"
  },
  "devDependencies": {
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsdoc": "^48.2.1",
    "eslint-plugin-prettier": "^5.1.3",
    "glob": "10.3.10",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "3.2.4",
    "sass": "1.70.0",
    "stylelint": "16.2.0",
    "stylelint-config-recess-order": "4.4.0",
    "stylelint-config-standard-scss": "13.0.0",
    "stylelint-prettier": "^4.1.0",
    "vite": "5.0.13"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{scss,css}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{html,json,md}": [
      "prettier --write"
    ]
  }
}